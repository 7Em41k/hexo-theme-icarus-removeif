    &:before,
    &:last-child:after
      content: ''
      display: block
      position: absolute
      left: calc(-5px - 1.5rem)
    &:before
      width: 9px
      height: 9px
      top: 1.3rem
      background: hsl(0, 0%, 86%)
      border-radius: 50%
    &:first-child:before
